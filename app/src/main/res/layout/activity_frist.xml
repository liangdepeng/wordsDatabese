<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_frist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/first_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/radio_group"
        android:background="@color/color_f3f3f3" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:elevation="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="主页"
            android:textColor="@drawable/ui_tab_check_text_color" />


        <RadioButton
            android:id="@+id/radio_btn_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="录入"
            android:textColor="@drawable/ui_tab_check_text_color" />

        <RadioButton
            android:id="@+id/radio_btn_recite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="背诵"
            android:textColor="@drawable/ui_tab_check_text_color" />

        <RadioButton
            android:id="@+id/radio_btn_self"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="@drawable/ui_tab_check_text_color" />

    </RadioGroup>

</RelativeLayout>
