<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dpdp.base_moudle.weight.FlowHeartLikeView
        android:id="@+id/like_btn_01"
        android:layout_width="100dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/like_btn_02">

        <Button
            android:id="@+id/praise_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="点赞01" />

    </com.dpdp.base_moudle.weight.FlowHeartLikeView>

    <com.dpdp.base_moudle.weight.FlowHeartLikeView
        android:id="@+id/like_btn_02"
        android:layout_width="100dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/like_btn_01"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/praise_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="6dp"
            android:text="点赞02" />


    </com.dpdp.base_moudle.weight.FlowHeartLikeView>


</androidx.constraintlayout.widget.ConstraintLayout>